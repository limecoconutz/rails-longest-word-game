<h1>New Game:</h1>
<%@letters.each do |letter|%>
<li><%=letter%></li>
<%end%>

<form action="new" method="post">
  <input type="text" name="word" value="<%=params[:word]%>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="button" type="submit" value="word">
</form>